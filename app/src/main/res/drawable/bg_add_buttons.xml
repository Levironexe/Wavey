<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="14dp" />
            <solid android:color="@color/darker_darker_main_orange" />  <!-- Darker shadow color -->
            <padding
                android:bottom="4dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>

    <!-- Main button layer -->
    <item android:bottom="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="14dp" />
            <solid android:color="@color/darker_main_bg" />
        </shape>
    </item>
</layer-list>